{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"allowJs": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "lib",
		"sourceMap": true,
		"sourceRoot": "./src",
		"outDir": "lib"
	}
}
