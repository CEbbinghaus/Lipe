{
	"modules": ["ES6", "CommonJS"],
	"compilerOptions": {
		"newLine": "lf",
		"target": "ES6",
		"moduleResolution": "node",
		"allowJs": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "lib/Types",
		"sourceMap": true,
		"sourceRoot": "/src",
